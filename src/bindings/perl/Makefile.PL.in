use ExtUtils::MakeMaker;
WriteMakefile(
              NAME        => "LibSBML",
	      PREFIX      => "@prefix@",
              MAKEFILE    => 'Makefile-perl',
              INSTALLDIRS => "site",
              LIBS        => ["@XERCES_LIBS@ @EXPAT_LIBS@", "-lm"],
	      CCFLAGS     => "@PERL_CPPFLAGS@",
              INC         => "-I../swig -I../..",
              MYEXTLIB    => "../../libsbml.a",
              macro       => {USE_SWIG => q[@USE_SWIG@]},
              OBJECT      => "LibSBML_wrap.o",
              AUTHOR      => "Christoph Flamm <xtof@tbi.univie.ac.at>",
              VERSION     => "@PACKAGE_VERSION@",
);

package MY;
sub postamble {
	return <<'MAKE_FRAG';
LibSBML_wrap.cxx: local.i
ifndef USE_SWIG
	$(NOECHO) $(ECHO) "Reconfigure --with-swig in order to rebuild LibSBML_wrap.cxx"
	exit 1
else
	@SWIG@ @SWIGFLAGS@ -Wall -c++ -perl5 -proxy -I../.. LibSBML.i
endif

LibSBML.pm: LibSBML_wrap.cxx

MYPACKLIST = $(DESTINSTALLSITEARCH)/auto/$(FULLEXT)/.packlist
MYPERLLOCAL = $(INSTALLARCHLIB)/perllocal.pod
myuninstall:
	$(NOECHO) dirs=`cat $(MYPACKLIST) | xargs -L 1 dirname`; \
	echo $$dirs; \
	$(PERLRUN) -MExtUtils::Install -e \
	  'uninstall('\''$(MYPACKLIST)'\',1,0')'; \
	for d in $$dirs; do \
          if test -d $$d && test -n "`find $$d -maxdepth 0 -empty`"; then \
	    echo rmdir $$d; \
	    rmdir $$d; \
          fi; \
        done
	$(PERLRUN) -MPod::Select -e \
	'podselect({-output=>'\''$(MYPERLLOCAL).tmp'\'',-sections=>[qq[/\!.*LibSBML.*/]]},'\''$(MYPERLLOCAL)'\'')';
	$(MV) $(MYPERLLOCAL).tmp $(MYPERLLOCAL);
MAKE_FRAG
}
