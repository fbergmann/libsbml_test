<?xml version="1.0" encoding="UTF-8"?>

<!--
Fail: (1801) An Event trigger must return a boolean value
(L2v1 Section 4.10.2)
	Additional case where the event trigger is a piecewise function that 
      includes a function definition
-->

<sbml xmlns="http://www.sbml.org/sbml/level2" level="2" version="1">
  <model>
    <listOfFunctionDefinitions>
        <functionDefinition id="f">
            <math xmlns="http://www.w3.org/1998/Math/MathML">
                <lambda>
                    <bvar><ci> x </ci></bvar>
                    <apply>
                        <plus/>
                        <ci> x </ci>
                        <cn> 0.1 </cn>
                    </apply>
                </lambda>
            </math>
        </functionDefinition>
    </listOfFunctionDefinitions>

    <listOfCompartments>
      <compartment id="compartment" size="1"/>
    </listOfCompartments>
 
    <listOfSpecies>
      <species id="S1" compartment="compartment" initialAmount="1"/>
    </listOfSpecies>

    <listOfEvents>
      <event id="e">
        <trigger>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
                <piecewise>
                  <piece>
                    <apply>
                      <ci> f </ci>
                      <ci> S1 </ci>
                    </apply>
			  <cn> 1.5 </cn>
                  </piece>
                  <otherwise>
                    <cn>0.05</cn> 
                  </otherwise>
                </piecewise>
          </math>
        </trigger>
      </event>
    </listOfEvents>
  </model>
</sbml>
