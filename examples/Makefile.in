include @top_srcdir@/config/makefile-common-vars.mk

# The following are configuration variables for this makefile.

CC        = @CC@
CXX       = @CXX@
XCFLAGS   = @CFLAGS@ -Wall -I../src
XCXXFLAGS = @CXXFLAGS@ -Wall -I../src
XLDFLAGS  = @LDFLAGS@ -L../src
XCPPFLAGS = @CPPFLAGS@
LIBS      = -lsbml

programs = \
  convertSBML evaluateMath printSBML readSBML translateMath validateSBML

ifdef USE_LAYOUT
  programs += layout_example1 layout_example2 layout_example3
endif

all: $(programs)

convertSBML: convertSBML.c util.c
	$(CC) $(XCFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

evaluateMath: evaluateMath.c util.c
	$(CC) $(XCFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS) -lm

printSBML: printSBML.c util.c
	$(CC) $(XCFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

readSBML: readSBML.c util.c
	$(CC) $(XCFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

translateMath: translateMath.c
	$(CC) $(XCFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

validateSBML: validateSBML.c util.c
	$(CC) $(XCFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

layout_example1: layout_example1.cpp
	$(CXX) $(XCXXFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

layout_example2: layout_example2.cpp
	$(CXX) $(XCXXFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

layout_example3: layout_example3.cpp
	$(CXX) $(XCXXFLAGS) $(XLDFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f $(programs) *~

distclean: clean
	/bin/rm Makefile

# The following are generic 'make' targets that are not used in
# this simple examples directory.

check dist docs install install-docs uninstall \
mostlyclean maintainer-clean installcheck dvi pdf ps info html \
distcheck:
