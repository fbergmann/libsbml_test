# -----------------------------------------------------------------------------
# Configuration variables
# -----------------------------------------------------------------------------
# Some of the following are substituted automatically by `configure'.  If
# you are looking at "Makefile", do not edit these values; instead, run the
# configure script at the top level of the src tree.  It will recreate
# "Makefile".

include @top_srcdir@/config/makefile-common-vars.mk

# `srcdir' points to the current directory, but should be set by configure.
# `subdir' must be set manually to the relative dir under srcdir.  Don't 
# set `subdir' to an absolute path, or some `make' actions will fail.

srcdir    = @srcdir@
thisdir   = docs/formatted

# In order to be able to create distributions with ready-to-read docs, we
# have a separate directory for formatted docs and their sources.  This
# creates a different situation than the case of other make rules in
# libsbml.  The current makefile only knows how to install the docs
# and create distributions; the makefile in ../src only knows how to create
# the docs.

doc_src_dir     = ../src

plain_text_docs = java.txt python.txt
manual_docs     = libsbml-manual.pdf libsbml-manual.ps
manual_dirs     = libsbml-manual
api_ref_docs    = libsbml-api-ref.pdf libsbml-api-ref.ps

docs            = $(plain_text_docs) $(manual_docs) $(manual_dirs) $(api_ref_docs)

distfiles       = $(docs) Makefile.in

extra_clean     = $(manual_docs) $(manual_dirs) $(api_ref_docs)


# -----------------------------------------------------------------------------
# Primary build actions
# -----------------------------------------------------------------------------

# The default rules in `makefile-common-actions.mk' know to interpret goals
# of the form `foo-recursive' to run 'make foo' in directories defined in
# variable `subdirs'.

all: $(docs)

%.pdf: $(doc_src_dir)/%.tex
ifneq "$(MAKEFLAGS)" ""
	$(MAKE) -w -C $(doc_src_dir) -$(MAKEFLAGS) $@
else
	$(MAKE) -w -C $(doc_src_dir) $@
endif

%.ps: $(doc_src_dir)/%.tex
ifneq "$(MAKEFLAGS)" ""
	$(MAKE) -w -C $(doc_src_dir) -$(MAKEFLAGS) $@
else
	$(MAKE) -w -C $(doc_src_dir) $@
endif

$(manual_dirs): $(doc_src_dir)/$@
ifneq "$(MAKEFLAGS)" ""
	$(MAKE) -w -C $(doc_src_dir) -$(MAKEFLAGS) $@
else
	$(MAKE) -w -C $(doc_src_dir) $@
endif


# -----------------------------------------------------------------------------
# Checking.
# -----------------------------------------------------------------------------

check:


# -----------------------------------------------------------------------------
# Formatting documentation.
# -----------------------------------------------------------------------------

dvi:

pdf:

ps:

info:

html:


# -----------------------------------------------------------------------------
# Installation.
# -----------------------------------------------------------------------------

install: install-docs

uninstall: uninstall-docs

installcheck:


# -----------------------------------------------------------------------------
# Cleaning.
# -----------------------------------------------------------------------------

clean: 

distclean:

mostlyclean:

maintainer-clean:


# -----------------------------------------------------------------------------
# Creating distribution (for libSBML maintainers only)
# -----------------------------------------------------------------------------

dist: dist-normal

distcheck: distcheck-normal


# -----------------------------------------------------------------------------
